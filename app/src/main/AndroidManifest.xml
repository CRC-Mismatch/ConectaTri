<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.wemind.marketplacetribanco">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activities.QuoteTypeActivity"
            android:label="@string/title_activity_quote_type"
            android:parentActivityName=".activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.wemind.marketplacetribanco.activities.MainActivity" />
        </activity>
        <activity
            android:name=".activities.SuppliersListActivity"
            android:label="@string/title_activity_suppliers_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activities.SimpleProductsListActivity"
            android:label="@string/title_products_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".activities.SupplierCreateActivity"
            android:label="@string/title_activity_supplier_create"
            android:parentActivityName=".activities.SuppliersListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.wemind.marketplacetribanco.activities.SuppliersListActivity" />
        </activity>
        <activity
            android:name=".activities.ProductCreateActivity"
            android:label="@string/title_product_create_activity"
            android:parentActivityName=".activities.SimpleProductsListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.wemind.marketplacetribanco.activities.SimpleProductsListActivity" />
        </activity>
    </application>

</manifest>