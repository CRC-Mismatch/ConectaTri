<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="br.com.wemind.marketplacetribanco.activities.QuoteTypeActivity">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.AppBarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="72dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/btn_remote_quote"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:paddingBottom="16dp">

                    <FrameLayout
                        android:id="@+id/btn_remote_top"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/bg_button_blue_top"
                        android:elevation="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Iniciar cotação remota"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@id/btn_remote_top"
                        android:background="@drawable/bg_button_blue_bottom"
                        android:elevation="4dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/placeholder" />
                    </FrameLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_check"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:paddingBottom="16dp">

                    <FrameLayout
                        android:id="@+id/btn_check_top"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/bg_button_green_top"
                        android:elevation="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Acompanhar Cotação em Andamento"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@id/btn_check_top"
                        android:background="@drawable/bg_button_green_bottom"
                        android:elevation="2dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/placeholder" />
                    </FrameLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btn_manual"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:clipToPadding="false"
                    android:paddingBottom="16dp">

                    <FrameLayout
                        android:id="@+id/btn_manual_top"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/bg_button_orange_top"
                        android:elevation="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Criar cotação manual"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                    </FrameLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_below="@id/btn_manual_top"
                        android:background="@drawable/bg_button_orange_bottom"
                        android:elevation="2dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_gravity="center"
                            app:srcCompat="@drawable/placeholder" />
                    </FrameLayout>
                </RelativeLayout>

            </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>
</layout>