<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    >

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                app:popupTheme="@style/AppTheme.PopupOverlay"/>

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="?attr/actionBarSize"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="72dp"
            android:paddingTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_round_corners"
                android:elevation="4dp"
                android:gravity="center_horizontal|top"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:paddingStart="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin">

                <android.support.design.widget.TextInputLayout
                    style="@style/AppTheme.AutoAdhesionEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/cnpj"
                        style="@style/EditTextCNPJ"
                        android:hint="CNPJ"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/AppTheme.AutoAdhesionEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/companyName"
                        style="@style/AppTheme.TextInpuLayoutEditText"
                        android:hint="Razão social da empresa"
                        android:inputType="text"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/AppTheme.AutoAdhesionEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/fantasyName"
                        style="@style/AppTheme.TextInpuLayoutEditText"
                        android:hint="Nome de usuário"
                        android:inputType="text"/>
                </android.support.design.widget.TextInputLayout>


                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_edit_background"
                    android:orientation="horizontal">

                    <br.com.wemind.marketplacetribanco.views.TextInputLayout
                        style="@style/AppTheme.AutoAdhesionEdit"
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:theme="@style/AppTheme.LoginLayout">

                        <br.com.wemind.marketplacetribanco.views.CustomLoginText
                            android:id="@+id/passwordText"
                            style="@style/AppTheme.AutoAdhesionEdit"
                            android:layout_width="208dp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="@string/prompt_password"
                            android:imeActionId="@+id/login"
                            android:imeActionLabel="@string/action_sign_in_short"
                            android:imeOptions="actionUnspecified"
                            android:inputType="textPassword"
                            android:letterSpacing="0.2"
                            android:maxLines="1"
                            android:paddingBottom="12dp"
                            android:paddingEnd="10dp"
                            android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/show_password_btn"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical|end"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"
                            android:scaleX="0.66"
                            android:scaleY="0.66"
                            android:tint="@color/loginLtGray"
                            app:srcCompat="@drawable/ic_eye" />
                    </br.com.wemind.marketplacetribanco.views.TextInputLayout>


                </LinearLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/AppTheme.AutoAdhesionEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/passwordConfText"
                        style="@style/AppTheme.TextInpuLayoutEditText"
                        android:hint="Confirme a Senha"
                        android:inputType="textPassword"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/AppTheme.AutoAdhesionEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/email"
                        style="@style/AppTheme.TextInpuLayoutEditText"
                        android:hint="E-mail"
                        android:inputType="textEmailAddress"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/AppTheme.AutoAdhesionEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/cep"
                        style="@style/AppTheme.TextInpuLayoutEditText"
                        android:digits="1234567890-"
                        android:hint="CEP"
                        android:inputType="number"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/AppTheme.AutoAdhesionEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <br.com.wemind.marketplacetribanco.views.SelectableEditText
                        android:id="@+id/state"
                        style="@style/AppTheme.TextInpuLayoutEditText"
                        android:hint="Estado"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/AppTheme.AutoAdhesionEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/city"
                        style="@style/AppTheme.TextInpuLayoutEditText"
                        android:hint="Cidade"
                        android:inputType="text"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/AppTheme.AutoAdhesionEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/address"
                        style="@style/AppTheme.TextInpuLayoutEditText"
                        android:hint="Endereço"
                        android:inputType="text"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/AppTheme.AutoAdhesionEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/phone"
                        style="@style/AppTheme.TextInpuLayoutEditText"
                        android:hint="Telefone"
                        android:inputType="phone"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/AppTheme.AutoAdhesionEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/cellphone"
                        style="@style/AppTheme.TextInpuLayoutEditText"
                        android:hint="Telefone celular"
                        android:inputType="phone"/>
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/agreementCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="8dp"/>

                    <TextView
                        android:id="@+id/agreementText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        tools:text="Li e aceito os termos de uso e a política de privacidade"/>
                </LinearLayout>

                <Button
                    android:id="@+id/sendButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_round_thin_main_corners"
                    android:text="@string/btn_activity_sign_up_submit"
                    android:textColor="@color/main0"
                    android:textStyle="bold"/>
            </LinearLayout>
        </ScrollView>
    </android.support.design.widget.CoordinatorLayout>
</layout>