<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/statusbar_blue</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowBackground">@color/backgroundGray</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
    </style>

    <style name="AppTheme.LoginEdit" parent="AppTheme">
        <item name="colorAccent">@color/loginGray</item>
        <item name="colorControlHighlight">@color/darkBlueStandard</item>
    </style>

    <style name="AppTheme.AutoAdhesionEdit" parent="AppTheme">
        <item name="colorAccent">@color/darkBlueStandard</item>
        <item name="colorControlNormal">@color/darkBlueStandard</item>
        <item name="colorControlActivated">@color/darkBlueStandard</item>
        <item name="colorControlHighlight">@color/darkBlueStandard</item>
        <item name="android:textColorHint">@color/darkBlueStandard</item>
    </style>

    <style name="AppTheme.LoginLayout" parent="AppTheme">
        <item name="colorAccent">@color/loginLtGray</item>
        <item name="colorControlHighlight">@color/darkBlueStandard</item>
    </style>

    <style name="AppTheme.ActionBar" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorControlNormal">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
        <item name="colorPrimary">@color/toolbar_blue</item>
        <item name="android:background">@color/toolbar_blue</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.WhiteBackground" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorAccent">#7000</item>
    </style>

    <style name="AppTheme.FAB" parent="AppTheme">
        <item name="colorAccent">@color/fab_blue</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="EditTextCNPJ">
        <item name="android:inputType">number</item>
        <item name="android:digits">1234567890./-</item>
    </style>

    <style name="LinearInputFormComponent">
        <item name="android:layout_marginTop">16dp</item>
    </style>
</resources>
