<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/main0"/>
            <corners android:radius="@dimen/item_border_radius"/>
        </shape>
    </item>
    <item android:left="@dimen/item_border_radius">
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners
                android:bottomRightRadius="@dimen/item_border_radius"
                android:topRightRadius="@dimen/item_border_radius"/>
        </shape>
    </item>
</layer-list>